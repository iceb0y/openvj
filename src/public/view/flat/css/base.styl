// Layout
body, html
    height      100%

html
    background  #EEE url(../img/bg.png) repeat

#container
    width       920px
    height      100%

#footer
    color       #AAA
    text-align  center
    line-height 1.4
    font-size   13px
    text-shadow 1px 1px 0px #fff

// Navigation bar =====================================
.cont-nav
    position    fixed
    z-index     1
    left        0
    top         0
    width       $nav-width
    height      100%
    background  $nav-color

.cont-nav-a
    width       $nav-width
    height      $nav-width
    line-height $nav-width
    text-align  center
    display     block
    opacity     0.7
    font-size   $nav-width*0.6
    transition  all .2s ease-in-out

.cont-nav-a, .cont-nav-a:visited, .cont-nav-a:hover
    color       #fff

.cont-nav-a:hover
    text-shadow 0 0 5px #fff
    opacity     1
    background  lighten($nav-color, 25%)

// IE6
.cont-nav-active
    opacity     0.9
    background  $link-color
    &:hover
        background  lighten(@background, 5%)

//Colorful
for list in $page-color
    #page_{list[0]} .body-title
        color               darken(list[1], 15%)
    .cont-nav-{list[0]}.cont-nav-active
        background-color    list[1]
        &:hover
            background-color    lighten(@background-color, 5%)

// Body ===============================================
.cont-body
    background  #F8F8F8 url(../img/content_bg.png) repeat
    margin-left $nav-width
    box-shadow  0 0 10px rgba(0,0,0,0.3)
    min-height  100%
    position    relative
    z-index     0

.body-title
    font-size   25px
    padding     20px