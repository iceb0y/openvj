.small {font-size:.8em;margin-bottom:1.875em;line-height:1.875em;}
.large {font-size:1.2em;line-height:2.5em;margin-bottom:1.25em;}

// Layout =============================================
body, html
    height      100%

html
    background  #EEE url(../img/bg.png) repeat

#container
    width       920px
    height      100%

#footer
    color       #AAA
    text-align  center
    line-height 1.4
    font-size   13px
    text-shadow 1px 1px 0px #fff

// UI =================================================
@import "vendor/ui"

// Dialogs ============================================
@import "vendor/dialog"

// Navigation bar =====================================
@import "vendor/navigation"

// Body ===============================================
.cont-body
    background  #F8F8F8 url(../img/content_bg.png) repeat
    margin-left $nav-width
    box-shadow  0 0 10px rgba(0,0,0,0.3)
    min-height  100%
    position    relative
    z-index     0

.body-top
    padding     15px 20px
    text-shadow 1px 1px 0px #fff

.body-title
    font-size   25px
    line-height 35px
    float       left

.body-action
    font-size   14px
    line-height 35px
    float       right
    color       #777