body.page_manage
    overflow-x  auto
    background  #FEFEFE

.page_manage

    #container
        min-width   800px
        margin      0 auto

    .cont-userbar
        border-bottom  1px solid #E0E0E0

    .layout-col-cont
        position    relative
        z-index     5

.manage-sidebar-bg
    position    absolute
    top         0
    bottom      100px
    right       0
    width       ($sidebar-width)px
    background  #EFF9FC
    border-left 1px solid #D7F2FF
    z-index     0

.manage-sidebar
    padding     20px 0
    font-size   0.9em

.manage-sidebar-a
    display     block
    padding     5px 20px
.manage-sidebar-a:hover
    text-decoration none
    background  $link-color-hover
    color       #FFF
.manage-sidebar-a.active
    text-decoration none
    background  $link-color
    color       #FFF
.manage-sidebar-headline
    margin      15px 0 0 0
    padding     5px 20px

.manage-cont
    padding     20px