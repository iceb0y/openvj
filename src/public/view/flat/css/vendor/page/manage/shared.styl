$manage-sidebar-width = 270

body.page_manage
    overflow-x  auto

.page_manage #container
    min-width   800px
    margin      0 auto


.manage-container
    border-top  1px solid #E0E0E0

.manage-sidebar
    position    absolute
    top         54px
    bottom      100px
    background  #EFF9FC
    right       0
    width       ($manage-sidebar-width)px
    border-left 1px solid #D7F2FF
    z-index     -1

.manage-main-bg
    position    absolute
    top         54px
    bottom      100px
    background  #FEFEFE
    right       ($manage-sidebar-width)px
    left        0
    z-index     -1

.manage-main
    margin-right ($manage-sidebar-width + 10)px