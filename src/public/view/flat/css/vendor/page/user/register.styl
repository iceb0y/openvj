.reg-bg-container
    
    height      600px
    position    relative
    border      40px solid darkenT($bg-color, 5%)
    border-left 0
    border-right 0

.reg-bg-left,
.reg-bg-right
    
    width       50%
    position    absolute
    top         0
    height      100%
    z-index     -1

.reg-bg-left
    
    left        0
    background  #0071AB

.reg-bg-right
    
    left        50%
    background  #231816

.reg-bg
    
    background  url(../img/register_bg.jpg) no-repeat center top
    height      600px

.reg-form
    
    height      600px
    width       500px
    float       right
    background  rgba(0,0,0,0.4)

.reg-form-content
    
    padding     30px
    color       #FFF

.reg-form-content h1
    
    color       #FFF