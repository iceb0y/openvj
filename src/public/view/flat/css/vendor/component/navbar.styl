.cont-navbar
    padding: 20px 0

.cont-navbar-logo-a
    width: 220px
    height: 80px
    display: block
    background: url(../img/logo.png) no-repeat

.cont-nav-li
    float: left
    margin-top: 20px
    line-height: 40px
    color: darkenT($bg-color, 40%)

.cont-nav-devider
    padding: 0 10px

.cont-nav-a, .cont-nav-a:visited
    font-size: 1.2em
    color: darkenT($bg-color, 40%)
    font-weight: 300

.cont-nav-a:hover
    text-decoration: none

for $name, $color in $page-color
    .cont-nav-{$name}:hover
        color: $color

.cont-nav-icon
    padding-right: 10px

@media(max-width:979px) {

    .cont-nav-icon { display:none; }

}

@media(max-width:775px) {
    
    .cont-userbar .float-left,
    .cont-userbar .float-right { float:none; }

    .cont-navbar .float-left,
    .cont-navbar .float-right { float:none; }

}