a, a:visited
    color       $link-color
    text-decoration none

a:focus, a:hover
    color       $link-color-hover
    text-decoration underline

a:focus
    background  $focus-bg-color
    box-shadow  $focus-box-shadow
    outline     $focus-border

.textbox
    margin      0
    box-sizing  content-box
    height      16px
    line-height 16px
    outline     0
    padding     4px
    border      1px solid #DDD
    transition  all .2s linear
    background  #FCFCFC

.textbox:hover
    border-color #CCC
    background  #FFF

.textbox:focus
    border-color $focus-color
    background  #FFF
    box-shadow  $focus-box-shadow

.button
    cursor      default
    user-select none
    display     inline-block
    *display    inline
    height      16px
    box-sizing  content-box
    padding     4px 18px
    line-height 16px
    border      1px solid $button-border-color
    background  $button-color
    margin      0 2px
    transition  all .2s linear

.button:hover
    background  $button-color-hover

.button:focus
    box-shadow  $focus-box-shadow
    border      $focus-border
    background  $focus-bg-color

.button:active
    background  $button-active-color
//    box-shadow  inset 1px 1px 3px rgba(0,0,0,0.1)

.form-line
    margin      5px 0