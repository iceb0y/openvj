.textbox
    margin      0
    box-sizing  content-box
    height      16px
    line-height 16px
    outline     0
    padding     4px
    border      1px solid #DDD
    transition  all .2s linear
    background  #FCFCFC

.textbox:hover
    border-color #CCC
    background  #FFF

.textbox:focus
    border-color #FFDE6A
    background  #FFF
    box-shadow  0 0 5px #FFDF00

.button
    cursor      default
    user-select none
    display     inline-block
    *display    inline