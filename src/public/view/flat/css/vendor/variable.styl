$theme-style-light = true

$focus-color = #FFDF00
$focus-bg-color = lightenT($focus-color, 90%)
$focus-border = 1px solid $focus-color
$focus-box-shadow = 0 0 5px $focus-color

$bg-color = #F8F8F8
$text-color = #222

$link-color = #119EEA
$link-color-hover = lightenT($link-color, 10%)

$ui-border-color = #CCC
$ui-bg-color = $bg-color
$ui-border-color-hover = darkenT($ui-border-color, 10%)
$ui-bg-color-hover = lightenT($ui-bg-color, 80%)

$button-color = lightenT($ui-border-color, 60%)
$button-color-hover = darkenT($button-color, 8%)
$button-color-active = darkenT($button-color, 16%)
$button-def-color = #FF6A6A
$button-def-color-hover = darkenT($button-def-color, 15%)
$button-def-color-active = darkenT($button-def-color, 30%)

$textbox-border-color = $ui-border-color
$textbox-bg-color = $ui-bg-color
$textbox-hover-border-color = $ui-border-color-hover
$textbox-hover-bg-color = $ui-bg-color-hover

$dialog-bg-color = lightenT($bg-color, 80%)

$nav-color = #222
$nav-width = 60px

$page-color = (home #3D88EF) (problems #FF4D4D) (discussion #00B22D)

$dialog-title-color = lightenT($link-color, 10%)
$dialog-button-color = $button-color

