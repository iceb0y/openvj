.layout-col:after
    content     "\200B"
    display     block
    height      0
    clear       both

.layout-col
    *zoom       1

.layout-col-cont
    position    relative

.layout-col-left
    float       left
    width       100%
    margin-left - ($sidebar-width + 10)px

.layout-col-left-cont
    margin-left ($sidebar-width + 10)px

.layout-col-right
    float       right
    width       ($sidebar-width)px