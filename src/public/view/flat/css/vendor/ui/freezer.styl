.vj-freezer-layer
    
    position    absolute
    left        0
    top         0
    width       100%
    height      100%
    background  #FFF
    opacity     0
    visibility  hidden
    transition  visibility 0s linear .1s, opacity .1s linear
    z-index     1
    outline     0

.vj-freezer-layer.dark
    
    background  #000

.vj-freezer-layer.show
    
    visibility  visible
    opacity     0.7
    transition-delay 0s