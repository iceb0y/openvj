.vj-freezer-layer
    
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: rgba(255,255,255,0.7)
    opacity: 0
    visibility: hidden
    transition: visibility 0s linear .1s, opacity .1s linear
    z-index: 1
    outline: 0
    
.vj-freezer-layer-loading

    position: absolute
    left: 50%
    top: 50%
    margin-left: -13px
    margin-top: -13px

.vj-freezer-layer-dark
    
    background: rgba(0,0,0,0.7)

.vj-freezer-layer-show
    
    visibility: visible
    opacity: 1
    transition-delay: 0s